<form action="~/Home/RegisterUser" method="post">

    <fieldset>
        <legend>Register information</legend>
        <table>
            <tbody>
                <tr>
                    <td>
                        <label for="UserName">UserName:</label>
                    </td>
                    <td>
                        <input id="UserName" name="User"
                               type="text" value="My User"
                               size="40" maxlength="15"
                               placeholder="Type in your usarname"
                               autofocus />
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="Password">Password:</label>
                    </td>
                    <td>
                        <input id="Password" type="password"  name="password" size="40"
                               placeholder="Type in your password" />
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <button>Register</button>
                        <input type="reset" />
                    </td>
                </tr>
            </tbody>
        </table>

    </fieldset>
</form>